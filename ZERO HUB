-- Auto guardado de configuraci√≥n
function SaveSettings()
    local json = game:GetService("HttpService"):JSONEncode(_G.Settings)
    writefile("ZERO_HUB_SETTINGS.json", json)
end

function LoadSettings()
    if isfile("ZERO_HUB_SETTINGS.json") then
        local json = readfile("ZERO_HUB_SETTINGS.json")
        _G.Settings = game:GetService("HttpService"):JSONDecode(json)
    end
end

LoadSettings()
