-- ZERO HUB - SISTEMA AUTO QUEST INTELIGENTE
if game.PlaceId == 2753915549 or game.PlaceId == 4442272183 or game.PlaceId == 7449423635 then -- Blox Fruits

    -- Inicializar variables globales
    getgenv().AutoQuestEnabled = false
    getgenv().QuestFarmEnabled = false
    getgenv().FastAttack = true
    getgenv().FarmDistance = 5
    getgenv().SelectedStat = "Melee"
    getgenv().AutoStats = false

    -- Cargar UI Library
    local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

    -- Crear Ventana Principal
    local Window = OrionLib:MakeWindow({
        Name = "ZERO HUB | Blox Fruits", 
        HidePremium = false,
        SaveConfig = true, 
        IntroEnabled = true,
        IntroText = "ZERO HUB",
        ConfigFolder = "ZERO_HUB"
    })

    -- Crear Tabs
    local QuestTab = Window:MakeTab({
        Name = "ðŸŽ¯ Auto Quest",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    local FarmTab = Window:MakeTab({
        Name = "âš”ï¸ Farm",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    local StatsTab = Window:MakeTab({
        Name = "ðŸ“Š Stats",
        Icon = "rbxassetid://4483345998",
        PremiumOnly = false
    })

    -- BASE DE DATOS DE NPCS
    local QuestNPCs = {
        -- First Sea
        {
            Name = "Bandit Leader",
            NPC = "Bandit Leader",
            Island = "Starter Island",
            Level = "0-10",
            CFrame = CFrame.new(1050, 50, 1600),
            Enemy = "Bandits",
            Sea = 1
        },
        -- [Resto de NPCs aquÃ­]
    }

    -- Funciones principales
    local function GetPlayerLevel()
        local Player = game.Players.LocalPlayer
        if Player.Data and Player.Data.Level then
            return Player.Data.Level.Value
        end
        return 1
    end

    local function FindOptimalNPC()
        local playerLevel = GetPlayerLevel()
        for _, npc in pairs(QuestNPCs) do
            local minLevel = tonumber(string.match(npc.Level, "(%d+)"))
            local maxLevel = tonumber(string.match(npc.Level, "-(%d+)")) or minLevel + 30
            if playerLevel >= minLevel and playerLevel <= maxLevel then
                return npc
            end
        end
        return QuestNPCs[1]
    end

    -- SecciÃ³n Auto Quest
    QuestTab:AddSection({
        Name = "Auto Quest Settings"
    })

    QuestTab:AddToggle({
        Name = "Enable Auto Quest",
        Default = false,
        Save = true,
        Flag = "AutoQuest",
        Callback = function(Value)
            getgenv().AutoQuestEnabled = Value
            if Value then
                -- Auto Quest Logic
                spawn(function()
                    while getgenv().AutoQuestEnabled do
                        local npc = FindOptimalNPC()
                        if npc then
                            -- Teleport to NPC
                            local humanoidRootPart = game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                            if humanoidRootPart then
                                humanoidRootPart.CFrame = npc.CFrame
                            end
                        end
                        wait(1)
                    end
                end)
            end
        end
    })

    -- SecciÃ³n Auto Farm
    FarmTab:AddSection({
        Name = "Auto Farm Settings"
    })

    FarmTab:AddToggle({
        Name = "Enable Auto Farm",
        Default = false,
        Save = true,
        Flag = "AutoFarm",
        Callback = function(Value)
            getgenv().QuestFarmEnabled = Value
            if Value then
                -- Auto Farm Logic
                spawn(function()
                    while getgenv().QuestFarmEnabled do
                        -- Farm Logic here
                        wait(1)
                    end
                end)
            end
        end
    })

    -- Anti AFK
    local VirtualUser = game:GetService("VirtualUser")
    game:GetService("Players").LocalPlayer.Idled:Connect(function()
        VirtualUser:CaptureController()
        VirtualUser:ClickButton2(Vector2.new())
    end)

    -- Notify al iniciar
    OrionLib:MakeNotification({
        Name = "ZERO HUB",
        Content = "Script iniciado correctamente!\nBlox Fruits detectado.",
        Image = "rbxassetid://4483345998",
        Time = 5
    })

    -- Init Library
    OrionLib:Init()

else
    -- Si no es Blox Fruits
    game.Players.LocalPlayer:Kick("ðŸ›‘ Este script solo funciona en Blox Fruits!")
end
