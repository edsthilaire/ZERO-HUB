-- Sección de Auto Quest
local QuestSection = QuestTab:AddSection({
    Name = "Quest Settings"
})

QuestSection:AddToggle({
    Name = "Auto Quest",
    Default = false,
    Flag = "AutoQuest",
    Save = true,
    Callback = function(Value)
        getgenv().AutoQuestEnabled = Value
        if Value then
            AutoQuestSystem()
        end
    end    
})

QuestSection:AddButton({
    Name = "Buscar NPC Óptimo",
    Callback = function()
        local optimalNPC = FindOptimalNPC()
        OrionLib:MakeNotification({
            Name = "ZERO HUB",
            Content = "NPC Encontrado: " .. optimalNPC.Name .. "\nNivel: " .. optimalNPC.Level,
            Image = "rbxassetid://4483345998",
            Time = 5
        })
    end    
})

QuestSection:AddToggle({
    Name = "Auto Farm",
    Default = false,
    Flag = "AutoFarm",
    Save = true,
    Callback = function(Value)
        getgenv().QuestFarmEnabled = Value
    end    
})

-- Sección de Farm
local FarmSection = FarmTab:AddSection({
    Name = "Farm Settings"
})

FarmSection:AddToggle({
    Name = "Fast Attack",
    Default = true,
    Flag = "FastAttack",
    Save = true,
    Callback = function(Value)
        getgenv().FastAttack = Value
    end    
})

FarmSection:AddSlider({
    Name = "Farm Distance",
    Min = 0,
    Max = 20,
    Default = 5,
    Color = Color3.fromRGB(255,255,255),
    Increment = 1,
    ValueName = "studs",
    Flag = "FarmDistance",
    Save = true,
    Callback = function(Value)
        getgenv().FarmDistance = Value
    end    
})

-- Sección de Stats
local StatSection = StatsTab:AddSection({
    Name = "Auto Stats"
})

StatSection:AddDropdown({
    Name = "Select Stat",
    Default = "Melee",
    Options = {"Melee", "Defense", "Sword", "Gun", "Demon Fruit"},
    Flag = "SelectedStat",
    Save = true,
    Callback = function(Value)
        getgenv().SelectedStat = Value
    end    
})

StatSection:AddToggle({
    Name = "Auto Add Stats",
    Default = false,
    Flag = "AutoStats",
    Save = true,
    Callback = function(Value)
        getgenv().AutoStats = Value
    end    
})

-- Info Section
local InfoSection = QuestTab:AddSection({
    Name = "Information"
})

InfoSection:AddParagraph("Developer","edsthilaire")
InfoSection:AddParagraph("Last Update","2025-10-30 21:37:42")

-- [Resto de tus funciones aquí]
function GetPlayerLevel()
    local success, level = pcall(function()
        return game.Players.LocalPlayer.Data.Level.Value
    end)
    return success and level or 1
end

